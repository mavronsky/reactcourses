{
  "compilerOptions": {
    "moduleResolution": "node",
    "plugins": [{ "name": "typescript-plugin-css-modules" }],
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "jsx": "react",
    "esModuleInterop": true,

    "module": "CommonJS",
    "allowJs": true,
    "outDir": "./dist",
    "strict": true
  },

  "include": [
    "src/**/**/**/**/*.ts",
    "src/components/Header/Header.tsx",
    "src/components/Header/components/Logo/Logo.tsx",
    "src/components/Courses/Courses.tsx",
    "src/components/Courses/components/CourseCard/CourseCard.tsx",
    "src/components/Login/Login.tsx",
    "src/components/Registration/Registration.tsx",
    "src/common/Button/Button.tsx",
    "src/common/Input/Input.tsx",
    "src/components/CreateCourse/CreateCourse.tsx",
    "src/components/Courses/components/SearchBar/SearchBar.tsx",
    "src/App.tsx"
  ]
}
